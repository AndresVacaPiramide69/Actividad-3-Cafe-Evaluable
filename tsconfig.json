{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": [
        "*.ts", "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
